---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Astro.">
	<header class="bg-[#000000] w-full py-4 px-24 flex justify-between">
		<div class="flex text-2xl text-white gap-x-4">
			<a class="font-medium flex pt-2">
				<div class="flex gap-x-2">
					<div class="bg-white w-8 h-8 rounded-lg p-[0.40rem]">
						<div class=" border-t-4 border-r-4 border-black pt-1">
							<div class="border-4 border-black rounded-full w-3 h-3"></div>
						</div>
					</div>
					<h3>Abstract</h3>
				</div>
			</a>
			<div class="px-4 border-l-2 border-white pt-2">
				<h3>Help Center</h3>
			</div>
		</div>
		<div class="flex text-white justify-end gap-x-4">
			<button class="px-6 py-2 border-[1px] border-white rounded-lg text-2xl bg-white bg-opacity-10">Submit a request</button>
			<button class="px-6 py-2 rounded-lg text-2xl bg-[#4C5FD5]">Sign in</button>
		</div>
		
	</header>
	<main>
		
	</main>
</Layout>

